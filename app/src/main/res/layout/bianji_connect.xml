<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="300dp"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="连接器名称:"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/connect_name"
            android:gravity="center"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:background="@drawable/edtext"
            android:textSize="20sp"
            android:hint="请输入名称"
            android:textColor="@color/black"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="300dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="连接器类型:"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/connect_type"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:entries="@array/connect"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="IP地址:"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/ed_connect_ip"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:background="@drawable/edtext"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/black"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="端口号:"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/ed_connect_port"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:background="@drawable/edtext"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/black"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="300dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/modbus_dialog_ok"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"/>

        <Button
            android:id="@+id/modbus_dialog_cancel"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"/>

    </LinearLayout>


</LinearLayout>