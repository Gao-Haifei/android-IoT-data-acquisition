<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="设备名称:"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/led_name"
            android:gravity="center"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:background="@drawable/edtext"
            android:textSize="20sp"
            android:hint="请输入名称"
            android:textColor="@color/black"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="300dp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="设备标识:"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/led_apitag"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:background="@drawable/edtext"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="设备类型:"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/sp_led_device"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:entries="@array/led_device"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="设备地址:"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/led_address"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:background="@drawable/edtext"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/black"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="300dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/led_ok"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"/>

        <Button
            android:id="@+id/led_cancel"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"/>

    </LinearLayout>


</LinearLayout>